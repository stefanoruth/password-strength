{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "outDir": "dist"
    },
    "include": ["./src"],
    "exclude": ["./src/**/*.test.ts"]
}
